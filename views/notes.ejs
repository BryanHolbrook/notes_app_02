<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <body>
   <header>
     <% include ./partials/header %>
   </header>
   <br>
   <h3 class='center cyan-text'>NOTES</h3>
   <hr class="color cyan" width="10%">
   <br>

     <div class='col s12 m4 center card hoverable'>
       <h5>Add Note</h5>
       <form action='/notes' method='post'>
         <input type='text' name='title' placeholder='name' />
         <input type='text' name='description' placeholder='description' />

         <button class='btn btn-waves cyan' type='submit'>Add</button>
       </form>
     </div>
       <br>
       <br>
     <table class='table col m8 s12 center card hoverable'>
       <thead>
         <th>Title</th>
         <th>Description</th>
         <th>x</th>
       </thead>
       <tbody>
         <% notes.forEach( function(note) { %>
           <% action = '/notes/' + note.id %>
           <tr>
             <td>
               <a href=<%= action %>><%= note.title %></a>
             </td>
             <td><%= note.description %></td>
             <td>
               <form action=<%= action %> method="POST">
                 <button class="btn cyan" type="submit">Delete</button>
               </form>
             </td>
           </tr>
         <% }); %>
       </tbody>
     </table>
   </body>
</html>
